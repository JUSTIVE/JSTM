{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    "incremental": true,
    "composite": true,

    "target": "esnext",
    "jsx": "react-jsx",

    "module": "esnext",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,

    "strict": true,

    "skipLibCheck": true,
  },
}
